{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es7"],
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist/types"
    },
    "include": ["src/**/*"]
}
